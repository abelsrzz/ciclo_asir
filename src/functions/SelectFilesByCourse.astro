---
import { Subject } from "astro:db";
import { db, like } from "astro:db";

import SelectFilesBySubject from "./SelectFilesBySubject.astro"

interface Props {
    course: string;
    className?: string;
  }
  const { course } = Astro.props;

const subjects = await db.select().from(Subject).where(
    like(Subject.courseName, `${course}`)
);

subjects.map

---
{
    subjects.map(({ id }) => (
        <h1>{id}</h1>
        <SelectFilesBySubject subject=`${id}`/>
    ))
}
