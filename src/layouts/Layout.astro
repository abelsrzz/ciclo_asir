---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kode+Mono:wght@400..700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --dark-background: linear-gradient(to bottom right, #34363c, #090d0f);
    --techno-font: "Kode Mono", monospace;
    --accent-color: #09ff00;
    --accent-background-color: #09ff002a;
  }
  * {
    color-scheme: dark;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    font-family: system-ui, sans-serif;
    background-image: var(--dark-background);
    cursor: crosshair;
	min-height: 100vh;
  }

  .tilt-animation {
    transition:
      scale 0.1s ease-in-out,
      transform 0.1s ease-in-out,
      color 0.1s ease-in-out;
  }
  .tilt-animation:hover {
    cursor: pointer;
    scale: 110%;
    transform: rotate(-2deg);
    color: var(--accent-color);
  }

  .tilt-animation::before {
    content: "";
    position: absolute;
    display: block;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--accent-color);
    transform: scaleX(0);
    transform-origin: top left;
    transition: transform 0.1s ease-in-out;
  }

  .tilt-animation:hover::before {
    transform: scaleX(1);
  }
  a {
    color: white;
    text-decoration: none;
  }
</style>
