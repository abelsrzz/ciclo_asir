---
import DatabaseIcon from "../icons/Database.astro";
import RedesIcon from "../icons/Redes.astro";
import CodeIcon from "../icons/Code.astro";
import SystemIcon from "../icons/Sistemas.astro";
import HardwareIcon from "../icons/Hardware.astro";
import SecurityIcon from "../icons/Seguridad.astro";

interface Props {
  flex?: string;
  href?: string;
}
const { href, flex } = Astro.props;
const safeFlex = flex ? flex : "row";
const safeHref = href ? href : "#";

---
<button class="btn" style={`flex-direction: ${safeFlex};`} onclick={`location.href='${safeHref}';`}>

  <span class="text"><slot/></span>
</button>
<style>
  .btn {
    user-select: none;
    border: none;
    width: 15em;
    height: 5em;
    border-radius: 15px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 12px;
    background: #24472a;
    cursor: pointer;
    transition:
      background-color 0.15s ease-in-out,
      box-shadow 0.15s ease-in-out,
      transform 0.15s ease-in-out;
    border: 2px solid var(--accent-color);
    font-family: var(--techno-font);
    text-transform: uppercase;
  }
  .text {
    font-weight: 600;
    color: #aaaaaa;
    font-size: medium;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1ch;
  }

  .btn:hover {
    background: linear-gradient(0deg, #09ff00, #0b7507);
    box-shadow: 0px 0px 30px 0px #09ff0038;
    transform: translateY(-2px);
  }

  .btn:hover .text {
    color: white;
  }

  .btn:hover .sparkle {
    fill: white;
    transform: scale(1.2);
  }
</style>
